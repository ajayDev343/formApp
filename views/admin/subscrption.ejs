															 <a href="/admin/keys?u_id=<%=response[i].id%>&t=1" class=" waves-effect waves-block dropdown-item"><i class="icon-eye"> </i> Key List</a>
															 <a href="/admin/keys?u_id=<%=response[i].id%>&t=2" class=" waves-effect waves-block dropdown-item"><i class="icon-eye"> </i> Ended Key List</a> -->
															 <a href="javascript:void(0);" rel="<%=response[i].id%>" table="users" class="delete waves-effect waves-block dropdown-item"><i class="ft-delete"></i> Delete</a>
														 </span>
													 </span>
													 
													 
												 </td>
											 </tr>
											 <% } %>
										 </tbody>                                        
									 </table>
								 </div>
							 </div>
						 </div>
					 </div>
				 </div>
			 </div>
		 </section>
