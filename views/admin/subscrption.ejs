													<td><%=response[i].username%></td>
													<!-- <td>Employee</td> -->
													<td><%=response[i].email%></td>
													<td><%=response[i].phone%></td>
													 <td><% if( response[i].gender==1){ %>Male<span style="display:none">.</span><% }
														else{
														%>
														Female
														<% } %>
														
													</td> 
													<td class="text-center">
														<div class="switch"> 
															<label><input class="changestatus switchery" data-size="sm" id="<%=response[i].id%>" table="users"  type="checkbox" <%=(response[i].status==1) ? 'checked' : "" %> >
																<span class="lever"></span></label>
															</div>
														</td>
														<td class="text-center">
														 <span class="dropdown">
															<button id="btnSearchDrop12" type="button" class="btn btn-sm btn-icon btn-pure font-medium-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
																<i class="ft-more-vertical"></i>
															</button>
															<span aria-labelledby="btnSearchDrop12" class="dropdown-menu mt-1 dropdown-menu-right">
															 <% if(response[i].user_type==2){ %>
															 	<a href="/admin/view_provider?id=<%=response[i].id%>"   class="edit waves-effect waves-block dropdown-item"><i class="icon-eye"></i> View</a>
															 <% } %>	
															 <!-- <a href="/admin/viewuser?id=<%=response[i].id%>"   class="edit waves-effect waves-block dropdown-item"><i class="ft-edit"></i> View/Edit</a>
															 <a href="/admin/contracts?u_id=<%=response[i].id%>&t=1" class=" waves-effect waves-block dropdown-item"><i class="icon-eye"> </i> Ongoing Contract</a>
