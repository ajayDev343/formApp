<!DOCTYPE html>
<html>
<head>
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link
	href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
	rel="stylesheet">
	<style>
		body {
			margin: 0;
			padding: 0;
			font-family: 'Montserrat', sans-serif;
			font-size: 14px;
		}
		table.dd tr td:last-child {
			text-align: right;
		}
		table.btm_cnt td {
			text-align: right;
			font-weight: 500;
			color: #888;
		}
	</style>
</head>
<body>
	<div style="width: 550px; margin: auto;">
		<table>
			<tbody>
				<tr>
					<td style="  background:#1C8DB2;
					padding: 15px;
					">
					<table cell-spacing="0" cell-pedding="0" style="width: 100%;color: #fff; background-color: #fff;
					">
					<tbody>
						<tr>
							<td style="
							text-align: center;
							padding: 40px 0;
							"><img src="<%= inspection_detail.image %>" width="100%" style="
							width: 180px;
							"></td>
						</tr>
					</tbody>
				</table>
				<table cell-spacing="0" cell-pedding="0" class="dd" style="
				width: 100%;
				color: #444;
				border: 0;
				margin: 0;
				font-weight: 500;
				background: #f5f5f5;
				">
				<tbody>
					<tr>
						<td style="
						padding: 10px 15px;
						font-weight: 600;
						">Title :</td>
						<td style="
						padding: 10px 15px;
						"> <%= inspection_detail.title %>  </td>
					</tr>
					<tr>
						<td style="
						padding: 10px 15px;
						font-weight: 600;
						"> Pool type :</td>
						<td style="
						padding: 10px 15px;  
						"> <%= inspection_detail.pool_type %></td>
					</tr>
					<tr>
						<td style="
						padding: 10px 15px;
						font-weight: 600;
						">Address :</td>
						<td style="
						padding: 10px 15px;
						">  <%= inspection_detail.address %></td>
					</tr>
					<tr>
						<td style="
						padding: 10px 15px;
						font-weight: 600;
						">Description :</td>
						<td style="
						padding: 10px 15px;
						">  <%= inspection_detail.description %></td>
					</tr>
					<tr>
					</tr>
					<tr>
					</tr>
				</tbody>
			</table>
			<% 
			var pool_data=JSON.parse(inspection_detail.pool_data);
			if(pool_data){
				var count=0;
				for(info of pool_data){
					<!-- console.log(info); -->
					%>
					<table style="
					font-weight: bold;
					background: #f5f5f5;
					width: 100%;
					padding: 14px 14px 12px;
					font-size: 20px;
					">
					<tbody>
						<tr>
							<td>
								<%=info.title; %>
							</td>
						</tr>
					</tbody>
				</table>
				<table cell-spacing="0" cell-pedding="0" class="dd" style="
				width: 100%;
				color: #444;
				border: 0;
				margin: 0;
				font-weight: 500;
				background: #f5f5f5;
				">
				<tbody>
					<% for(d of info.data){ %>
						<tr>
							<td style="
							padding: 10px 15px;
							font-weight: 600;
							"><%= d.title ;%></td>
							<td style="
							padding: 10px 15px;
							"> <%= d.value ;%>  </td>
						</tr>
						<%  } %>
						
					</tbody>
				</table>
				<%  }} %>
			</td>
		</tr>
	</tbody>
</table>
</div>
</body>
</html>